
@using NuGet.Protocol
@model ToDoList.Infrastructure.Models.ToDo

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div style="padding-top:20px;" class="text-center">
        <h1 class="display-6">Add New Task</h1>

        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col">
                <input asp-for="Title" class="form-control" placeholder="Description"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-auto">
                <input id="date-time" asp-for="DateTime" type="datetime-local" class="form-control" placeholder="Enter to do date and time"/>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="col-md-3 offset-md-9 text-lg-end" style="padding-top: 5px; padding-bottom: 5px">
                <input type="submit" value="Create" class="btn btn-success"/>
            </div>
        </form>
        <div class="row, col-md-3 offset-md-9 text-lg-end">
            <a class="btn btn-danger" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
}
